<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.Views.ActivityDetail"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
		<Label HorizontalTextAlignment="Center" Text="{Binding Activity.Titulo}" FontSize="Medium"/>
        <Label HorizontalTextAlignment="Center" VerticalOptions="Center" Text="{Binding Activity.Descricao}" FontSize="Small"/>
        <Label HorizontalTextAlignment="Center" Text="{Binding Activity.DataHora}" FontSize="Small"/>
    </StackLayout>
</ContentPage>