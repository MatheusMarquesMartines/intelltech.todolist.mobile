<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ToDoList.App">
  <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#303F9F</Color>
            <Color x:Key="PrimaryDark">#303F9F</Color>
            <Color x:Key="Accent">#303F9F</Color>
            <Color x:Key="LightBackgroundColor">#FAFAFA</Color>
            <Color x:Key="DarkBackgroundColor">#303F9F</Color>
            <Color x:Key="MediumGrayTextColor">#FFFFFF</Color>
            <Color x:Key="LightTextColor">#FFFFFF</Color>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
