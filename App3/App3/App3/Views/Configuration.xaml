<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="todolist.Configuration">
  <ContentPage.Content>

    <StackLayout
      Padding="20"
      Spacing="20">
 
      <Label x:Name="_email"></Label>
      
      <Label x:Name="_tHour" Text="Hora de recebimento"></Label>
      <TimePicker x:Name="_hour">
        <TimePicker.Format>hh:mm:ss</TimePicker.Format>
      </TimePicker>

      <Button x:Name="save"  Text="Salvar Dados" Clicked="SaveClicked"/>

    </StackLayout>

  </ContentPage.Content>
</ContentPage>